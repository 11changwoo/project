{%  extends 'layouts/app.twig' %}

{% block title %}
    정보수정
{% endblock %}

{% block content %}    
    <h3>정보수정</h3>
    <h4>json : {{ json }}</h4>
    <form name="form" action="/user/update" method="POST">
        <input type="text" id="user_id" name="user_id" placeholder="아이디" value="{{ users['user_id'] }}" readonly> <br/><br/>
        <input type="text" id="user_name" name="user_name" placeholder="이름" value="{{ users['user_name'] }}"> <br/><br/>

        <button type="submit">수정</button> <br/>        
    </form>
{% endblock %}